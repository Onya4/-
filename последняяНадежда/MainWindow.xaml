<Window x:Class="последняяНадежда.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:последняяНадежда"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4px"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition />
            <ColumnDefinition Width="4px"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4px"/>
            <RowDefinition Height="44px"/>
            <RowDefinition Height="44px"/>
            <RowDefinition/>
            <RowDefinition Height="4px"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="boxy" Grid.Column="2" Grid.Row="1"/>
        <Button x:Name="ent" Grid.Column="2" Content="Подтвердить" Grid.Row="2" Click="ent_Click" />
        <Button x:Name="hist" Grid.Column="1" Content="История" Grid.Row="2" Click="hist_Click"/>
        <ListBox x:Name="list_hist" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2"/>
        <TextBlock Grid.Column="1" Grid.Row="1" Text="Hello, bro!"/>
    </Grid>
</Window>
